<!--pages/demo06_flex/demo06.wxml-->

<view>水平布局</view>
<!--默认是水平布局  -->
<view style="display:flex">
<view style="background:blue;width:100%">123</view>
<view style="background:red;width:100%">456</view>
</view>

<view>垂直布局</view>

<!-- 垂直布局  -->
<view style="display:flex;flex-direction:column">
<view style="background:blue;width:100%">123</view>
<view style="background:red;width:100%">456</view>
</view>

<!--水平居中  -->
<view style="display:flex;width:100%;height:100px;background:powderblue;justify-content:center">
 <text>水平居中</text>
</view>
<!--纵向居中  -->
<view style="display:flex;width:100%;height:100px;background:#3e1;align-items:center">
 <text>垂直居中</text>
</view>
<!--水平垂直居中  -->
<view style="display:flex;width:100%;height:100px;background:#151;justify-content:center;align-items:center">
 <text>居中</text>
</view>